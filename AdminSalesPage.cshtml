            </div>
        </div>
    </footer>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Georgia', serif;
        background-color: #d4c4b0;
    }

    /* Sidebar */
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 10%;
        min-width: 9rem;
        height: 100vh;
        background-color: #e7dfd6;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.25rem 0;
        z-index: 1000;
    }

    .logo-container {
        margin-bottom: 2rem;
    }

    .sidebar-logo {
        width: 3.5rem;
        height: auto;
    }

    .sidebar-nav {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        width: 100%;
    }

    .nav-item {
        color: white;
        text-decoration: none;
        padding: 1rem 0.625rem;
        font-size: 1rem;
        font-weight: 500;
        text-align: center;
        transition: background-color 0.3s;
        letter-spacing: 0.0625rem;
        display: block;
    }

        .nav-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .nav-item.active {
            background-color: rgba(139, 111, 71, 0.5);
            border-left: 0.25rem solid #8b6f47;
        }

    .sidebar-footer {
        margin-top: auto;
        padding: 1.25rem 0;
    }

    .admin-link {
        color: white;
        text-decoration: none;
        font-size: 0.75rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.3125rem;
    }

        .admin-link i {
            font-size: 1.25rem;
        }

    /* Main Content */
    .main-content {
        margin-left: 10%;
        min-height: 100vh;
        background-color: #d4c4b0;
    }

    /* Sales Page */
    .sales-container {
        padding: 2.5rem 3rem;
        min-height: calc(100vh - 14rem);
        display: flex;
        flex-direction: column;
    }


    .sales-title {
        font-size: 2rem;
        font-weight: 600;
        color: #5d4037;
        margin-bottom: 1.5rem;
    }

    /* Chart Card */
    .chart-card {
        background-color: #f5f0eb;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        flex: 1;
    }

    /* Footer */
    footer {
        background-color: #e7d7c8;
        border: 2px solid #d4c4b0;
        border-left: none;
        border-right: none;
        padding: 2.5rem 2rem;
        margin: 2rem 0 0 0;
        text-align: center;
    }

    .footer-container {
        padding: 0;
        margin: 0 auto;
    }

    .footer-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin: 0 0 2rem 0;
        font-style: italic;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .social-links {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 4rem;
        flex-wrap: wrap;
    }

    .social-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: #3d2817;
        transition: transform 0.3s ease, color 0.3s ease;
    }

        .social-item:hover {
            transform: scale(1.1);
            color: #6b4423;
        }

        .social-item i {
            font-size: 3rem;
        }

        .social-item span {
            font-size: 1.2rem;
            font-weight: 500;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .sidebar {
            width: 6%;
            min-width: 5rem;
        }

        .main-content {
            margin-left: 6%;
        }

        .nav-item {
            font-size: 0.65rem;
            padding: 0.75rem 0.3125rem;
        }

        .sales-container {
            padding: 1.5rem 1rem;
        }

        .chart-card {
            padding: 1rem;
        }
    }
</style>

<!-- Chart.js from CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var ctx = document.getElementById('weeklySalesChart').getContext('2d');

        // Replace these with your actual data from the controller/service
        var labels = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
        var data = [1, 13, 38, 29, 32, 35, 40];

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Total Number of Appointments This Week',
                    data: data,
                    borderColor: '#6b4423',
                    backgroundColor: '#6b4423',
                    borderWidth: 2,
                    tension: 0,
                    fill: false,
                    pointStyle: 'star',
                    pointRadius: 8,
                    pointHoverRadius: 10,
                    pointBackgroundColor: '#6b4423',
                    pointBorderColor: '#6b4423'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        align: 'center',
                        labels: {
                            color: '#5d4037',
                            font: {
                                family: 'Georgia',
                                size: 13
                            },
                            usePointStyle: true,
                            pointStyle: 'circle',
                            pointStyleWidth: 10
                        }
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#5d4037',
                            font: {
                                family: 'Georgia',
                                size: 13
                            }
                        }
                    },
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(90, 74, 58, 0.1)'
                        },
                        ticks: {
                            color: '#5d4037',
                            font: {
                                family: 'Georgia',
                                size: 13
                            },
                            stepSize: 10
                        }
                    }
                }
            }
        });
    });
</script>