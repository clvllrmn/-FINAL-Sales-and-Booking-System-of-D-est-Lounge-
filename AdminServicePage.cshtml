@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Sidebar Navigation -->
<aside class="sidebar">
    <div class="logo-container">
        <a href="@Url.Action("Homepage","Main")">
            <img src="~/Content/Pictures/DestLogo.png" class="sidebar-logo" alt="D'est Lounge">
        </a>
    </div>
    <nav class="sidebar-nav">
        <a href="@Url.Action("AdminHomepage","Main")" class="nav-item">HOME</a>
        <a href="@Url.Action("AdminBookingPage","Main")" class="nav-item">BOOKINGS</a>
        <a href="@Url.Action("AdminServicePage","Main")" class="nav-item active">SERVICES</a>
        <a href="@Url.Action("AdminContactPage","Main")" class="nav-item">CONTACT</a>
        <a href="@Url.Action("AdminFAQsPage","Main")" class="nav-item">FAQs</a>
        <a href="@Url.Action("AdminInboxPage","Main")" class="nav-item">INBOX</a>
        <a href="@Url.Action("AdminSalesPage","Main")" class="nav-item">SALES</a>
    </nav>
    <div class="sidebar-footer">
        <a href="@Url.Action("LoginPage","Main")" class="admin-link">
            <i class="fa-regular fa-user"></i> Admin
        </a>
    </div>
</aside>

<!-- Main Content Area -->
<div class="main-content">
    <!-- Services Section -->
    <div class="services-page-container" ng-controller="DestLoungeSalesandBookingController">
        <div class="services-sidebar">
            <h2 class="services-sidebar-title">Services</h2>
            <div class="service-category"
                 ng-class="{'active': selectedCategory === 'all'}"
                 ng-click="filterServices('all')">
                <h3>All Services</h3>
            </div>
            <div class="service-category"
                 ng-class="{'active': selectedCategory === 'manicure'}"
                 ng-click="filterServices('manicure')">
                <h3>Manicure</h3>
            </div>
            <div class="service-category"
                 ng-class="{'active': selectedCategory === 'pedicure'}"
                 ng-click="filterServices('pedicure')">
                <h3>Pedicure</h3>
            </div>
        </div>
        <div class="services-content">
            <!-- Service Cards -->
            <div class="service-card"
                 ng-repeat="service in services | filter:categoryFilter">
                <div class="admin-controls">
                    <button class="edit-btn" ng-click="editService(service)">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </button>
                    <button class="delete-btn" ng-click="deleteService(service)">
                        <i class="fa-solid fa-trash-can"></i>
                    </button>
                </div>
                <div class="service-image">
                    <img ng-src="{{service.image}}" alt="{{service.name}}">
                </div>
                <div class="service-name">{{service.name}}</div>
            </div>
        </div>
    </div>

    <!-- Book Now Button -->
    <div class="book-now-container">
        <button class="book-now-button" onclick="window.location.href='@Url.Action("BookingPage","Main")'">
            Book Now
        </button>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <h2 class="footer-title">Follow our Socials!</h2>
            <div class="social-links">
                <a href="https://www.tiktok.com/&#64;destlounge"
                   class="social-item"
                   target="_blank">
                    <i class="fa-brands fa-tiktok"></i>
                    <span>destlounge</span>
                </a>
                <a href="https://www.facebook.com/profile.php?id=61578352581708" class="social-item" target="_blank">
                    <i class="fa-brands fa-facebook"></i>
                    <span>D'est Lounge</span>
                </a>
                <a href="https://www.instagram.com/destlounge/" class="social-item" target="_blank">
                    <i class="fa-brands fa-instagram"></i>
                    <span>destlounge</span>
                </a>
            </div>
        </div>
    </footer>
</div>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Georgia', serif;
        background-color: #d4c4b0;
    }

    /* Sidebar */
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 10%;
        min-width: 9rem;
        height: 100vh;
        background-color: #e7dfd6;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.25rem 0;
        z-index: 1000;
    }

    .logo-container {
        margin-bottom: 2rem;
    }

    .sidebar-logo {
        width: 3.5rem;
        height: auto;
    }

    .sidebar-nav {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        width: 100%;
    }

    .nav-item {
        color: white;
        text-decoration: none;
        padding: 1rem 0.625rem;
        font-size: 1rem;
        font-weight: 500;
        text-align: center;
        transition: background-color 0.3s;
        letter-spacing: 0.0625rem;
        display: block;
    }

        .nav-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .nav-item.active {
            background-color: rgba(139, 111, 71, 0.5);
            border-left: 0.25rem solid #8b6f47;
        }

    .sidebar-footer {
        margin-top: auto;
        padding: 1.25rem 0;
    }

    .admin-link {
        color: white;
        text-decoration: none;
        font-size: 0.75rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.3125rem;
    }

        .admin-link i {
            font-size: 1.25rem;
        }

    /* Main Content */
    .main-content {
        margin-left: 10%;
        min-height: 100vh;
        background-color: #d4c4b0;
    }

    /* Services Page Layout */
    .services-page-container {
        display: flex;
        min-height: calc(100vh - 400px);
        background-color: #f5f0eb;
        padding: 2rem;
        gap: 2rem;
    }

    /* Services Filter Sidebar */
    .services-sidebar {
        width: 200px;
        background-color: #e7dfd6;
        border: 3px solid #c1b2a5;
        padding: 2rem 1rem;
        height: fit-content;
    }

    .services-sidebar-title {
        font-size: 2rem;
        font-weight: 600;
        color: #5d4037;
        margin: 0 0 2rem 0;
        text-align: center;
    }

    .service-category {
        margin-bottom: 1.5rem;
        cursor: pointer;
        padding: 0.8rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .service-category:hover {
            background-color: #d4c4b0;
        }

        .service-category.active {
            background-color: #6b4423;
        }

            .service-category.active h3 {
                color: white;
            }

        .service-category h3 {
            font-size: 1rem;
            color: #5d4037;
            margin: 0;
            text-align: center;
            transition: color 0.3s ease;
        }

    /* Services Content Grid */
    .services-content {
        flex: 1;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        align-content: start;
    }

    /* Service Card — matches customer UI */
    .service-card {
        background-color: white;
        border: 3px solid #3d2817;
        padding: 1rem;
        box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
        position: relative;
    }

        .service-card:hover {
            transform: scale(1.05);
        }

    .service-image {
        width: 100%;
        height: 250px;
        overflow: hidden;
        border: 2px solid #3d2817;
        margin-bottom: 1rem;
    }

        .service-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .service-name {
        text-align: center;
        font-size: 1rem;
        color: #3d2817;
        font-weight: 600;
        letter-spacing: 0.1em;
        padding: 0.5rem 0;
    }

    /* Admin Controls on Cards */
    .admin-controls {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        display: flex;
        gap: 0.3125rem;
        z-index: 10;
    }

    .edit-btn,
    .delete-btn {
        background: rgba(255, 255, 255, 0.95);
        border: none;
        border-radius: 50%;
        width: 2rem;
        height: 2rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        box-shadow: 0 0.125rem 0.375rem rgba(0, 0, 0, 0.2);
    }

    .edit-btn {
        color: #4a7c59;
    }

        .edit-btn:hover {
            background: #4a7c59;
            color: white;
            transform: scale(1.1);
        }

    .delete-btn {
        color: #c84b4b;
    }

        .delete-btn:hover {
            background: #c84b4b;
            color: white;
            transform: scale(1.1);
        }

    /* Book Now Button */
    .book-now-container {
        text-align: center;
        padding: 3rem 0;
        background-color: #f5f0eb;
    }

    .book-now-button {
        padding: 1rem 3rem;
        font-size: 1.2rem;
        font-weight: 600;
        color: white;
        background-color: #6b4423;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .book-now-button:hover {
            background-color: #5d3a1f;
            transform: scale(1.05);
        }

    /* Footer */
    footer {
        background-color: #e7d7c8;
        border: 2px solid #d4c4b0;
        border-left: none;
        border-right: none;
        padding: 2.5rem 2rem;
        margin: 2rem 0 0 0;
        text-align: center;
    }

    .footer-container {
        padding: 0;
        margin: 0 auto;
    }

    .footer-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin: 0 0 2rem 0;
        font-style: italic;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .social-links {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 4rem;
        flex-wrap: wrap;
    }

    .social-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: #3d2817;
        transition: transform 0.3s ease, color 0.3s ease;
    }

        .social-item:hover {
            transform: scale(1.1);
            color: #6b4423;
        }

        .social-item i {
            font-size: 3rem;
        }

        .social-item span {
            font-size: 1.2rem;
            font-weight: 500;
        }

    /* Responsive */
    @@media (max-width: 1024px) {
        .services-content {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .sidebar {
            width: 6%;
            min-width: 5rem;
        }

        .main-content {
            margin-left: 6%;
        }

        .nav-item {
            font-size: 0.65rem;
            padding: 0.75rem 0.3125rem;
        }

        .services-page-container {
            flex-direction: column;
            padding: 1.875rem 1.25rem;
        }

        .services-sidebar {
            width: 100%;
        }

        .services-content {
            grid-template-columns: 1fr;
        }
</style>