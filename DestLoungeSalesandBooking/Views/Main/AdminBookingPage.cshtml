@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Sidebar Navigation -->
<aside class="sidebar">
    <div class="logo-container">
        <a href="@Url.Action("Homepage","Main")">
            <img src="~/Content/Pictures/DestLogo.png" class="sidebar-logo" alt="D'est Lounge">
        </a>
    </div>
    <nav class="sidebar-nav">
        <a href="@Url.Action("AdminHomepage","Main")" class="nav-item">HOME</a>
        <a href="@Url.Action("AdminBookingPage","Main")" class="nav-item active">BOOKINGS</a>
        <a href="@Url.Action("AdminServicePage","Main")" class="nav-item">SERVICES</a>
        <a href="@Url.Action("AdminContactPage","Main")" class="nav-item">CONTACT</a>
        <a href="@Url.Action("AdminFAQsPage","Main")" class="nav-item">FAQs</a>
        <a href="@Url.Action("AdminInboxPage","Main")" class="nav-item">INBOX</a>
        <a href="@Url.Action("AdminSalesPage","Main")" class="nav-item">SALES</a>
    </nav>
    <div class="sidebar-footer">
        <a href="@Url.Action("LoginPage","Main")" class="admin-link">
            <i class="fa-regular fa-user"></i> Admin
        </a>
    </div>
</aside>

<!-- Main Content Area -->
<div class="main-content" ng-controller="DestLoungeSalesandBookingController">
    <div class="bookings-container">
        <h1 class="bookings-title">Salon's Analytics:</h1>

        <!-- Filter Tabs -->
        <div class="filter-tabs">
            <button class="tab-btn" ng-class="{'active': selectedFilter === 'all'}" ng-click="filterBookings('all')">
                All Bookings
            </button>
            <button class="tab-btn" ng-class="{'active': selectedFilter === 'today'}" ng-click="filterBookings('today')">
                Today
            </button>
            <button class="tab-btn" ng-class="{'active': selectedFilter === 'upcoming'}" ng-click="filterBookings('upcoming')">
                Upcoming
            </button>
            <button class="tab-btn" ng-class="{'active': selectedFilter === 'completed'}" ng-click="filterBookings('completed')">
                Completed
            </button>
        </div>

        <!-- Bookings Grid -->
        <div class="bookings-grid">
            <div class="booking-card" ng-repeat="booking in filteredBookings">
                <div class="booking-info-row">
                    <div class="info-icon">
                        <i class="fa-solid fa-user"></i>
                    </div>
                    <div class="info-content">
                        <h3>Client:</h3>
                        <p>{{booking.clientName}}</p>
                    </div>
                </div>

                <div class="booking-divider"></div>

                <div class="booking-info-row">
                    <div class="info-icon">
                        <i class="fa-solid fa-heart"></i>
                    </div>
                    <div class="info-content">
                        <h3>Service:</h3>
                        <p>{{booking.service}}</p>
                    </div>
                </div>

                <div class="booking-divider"></div>

                <div class="booking-info-row">
                    <div class="info-icon">
                        <i class="fa-solid fa-calendar"></i>
                    </div>
                    <div class="info-content">
                        <h3>Date/Time:</h3>
                        <p>{{booking.dateTime}}</p>
                    </div>
                </div>

                <div class="booking-divider"></div>

                <div class="booking-info-row">
                    <div class="info-icon">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="info-content">
                        <h3>Contact:</h3>
                        <p>{{booking.Notes || 'N/A'}}</p>
                    </div>
                </div>

                <!-- ACTION BUTTONS -->
                <div style="margin-top:1.5rem; display:flex; gap:0.75rem; flex-wrap:wrap;">
                    <!-- Approve (only show if not Approved/Completed/Cancelled) -->
                    <button class="booking-complete-btn"
                            style="flex:1; background:#8b6f47;"
                            ng-click="approveBooking(booking.BookingId)"
                            ng-if="booking.Status !== 'Approved' && booking.Status !== 'Completed' && booking.Status !== 'Cancelled'">
                        Approve
                    </button>

                    <!-- Complete (only show if Approved or Pending; hide if Cancelled/Completed) -->
                    <button class="booking-complete-btn"
                            style="flex:1;"
                            ng-click="markAsComplete(booking.BookingId)"
                            ng-if="booking.Status !== 'Completed' && booking.Status !== 'Cancelled'">
                        Booking Complete
                    </button>

                    <!-- Cancel (only show if not Completed/Cancelled) -->
                    <button class="booking-complete-btn"
                            style="flex:1; background:#b0413e;"
                            ng-click="cancelBookingAdmin(booking.BookingId)"
                            ng-if="booking.Status !== 'Completed' && booking.Status !== 'Cancelled'">
                        Cancel
                    </button>
                </div>

                <!-- STATUS BADGES -->
                <div class="completed-badge"
                     ng-if="booking.Status === 'Completed'"
                     style="background:#4a7c59;">
                    <i class="fa-solid fa-check"></i> Completed
                </div>

                <div class="completed-badge"
                     ng-if="booking.Status === 'Approved'"
                     style="background:#8b6f47;">
                    <i class="fa-solid fa-thumbs-up"></i> Approved
                </div>

                <div class="completed-badge"
                     ng-if="booking.Status === 'Cancelled'"
                     style="background:#b0413e;">
                    <i class="fa-solid fa-xmark"></i> Cancelled
                </div>

            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <h2 class="footer-title">Follow our Socials!</h2>
            <div class="social-links">
                <a href="https://www.tiktok.com/&#64;destlounge"
                   class="social-item"
                   target="_blank">
                    <i class="fa-brands fa-tiktok"></i>
                    <span>destlounge</span>
                </a>
                <a href="https://www.facebook.com/profile.php?id=61578352581708" class="social-item" target="_blank">
                    <i class="fa-brands fa-facebook"></i>
                    <span>D'est Lounge</span>
                </a>
                <a href="https://www.instagram.com/destlounge/" class="social-item" target="_blank">
                    <i class="fa-brands fa-instagram"></i>
                    <span>destlounge</span>
                </a>
            </div>
        </div>
    </footer>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Georgia', serif;
        background-color: #d4c4b0;
    }

    /* Sidebar Styles */
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 10%;
        min-width: 9rem;
        height: 100vh;
        background-color: #e7dfd6;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.25rem 0;
        z-index: 1000;
    }

    .logo-container {
        margin-bottom: 2rem;
    }

    .sidebar-logo {
        width: 3.5rem;
        height: auto;
    }

    .sidebar-nav {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        width: 100%;
    }

    .nav-item {
        color: #5a4a3a;
        text-decoration: none;
        padding: 1rem 0.625rem;
        font-size: 1rem;
        font-weight: 500;
        text-align: center;
        transition: background-color 0.3s;
        letter-spacing: 0.0625rem;
        display: block;
    }

    .nav-item:hover {
        background-color: rgba(90, 74, 58, 0.1);
    }

    .nav-item.active {
        background-color: rgba(139, 111, 71, 0.3);
        border-left: 0.25rem solid #8b6f47;
    }

    .sidebar-footer {
        margin-top: auto;
        padding: 1.25rem 0;
    }

    .admin-link {
        color: #5a4a3a;
        text-decoration: none;
        font-size: 0.75rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.3125rem;
    }

    .admin-link i {
        font-size: 1.25rem;
    }

    /* Main Content Area */
    .main-content {
        margin-left: 10%;
        min-height: 100vh;
        background-color: #f5f0eb;
    }

    /* Bookings Container */
    .bookings-container {
        min-height: calc(100vh - 20rem);
        padding: 3rem;
    }

    .bookings-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: #5a4a3a;
        margin-bottom: 2rem;
    }

    /* Filter Tabs */
    .filter-tabs {
        display: flex;
        gap: 1rem;
        margin-bottom: 3rem;
        flex-wrap: wrap;
    }

    .tab-btn {
        background-color: transparent;
        border: none;
        color: #5a4a3a;
        font-size: 1rem;
        font-weight: 500;
        padding: 0.5rem 1rem;
        cursor: pointer;
        transition: all 0.3s;
        border-bottom: 0.1875rem solid transparent;
        font-family: 'Georgia', serif;
    }

    .tab-btn:hover {
        color: #8b6f47;
    }

    .tab-btn.active {
        color: #8b6f47;
        border-bottom-color: #8b6f47;
    }

    /* Bookings Grid */
    .bookings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(25rem, 1fr));
        gap: 2rem;
        max-width: 100%;
    }

    .booking-card {
        background-color: rgba(232, 223, 213, 0.9);
        border-radius: 2rem;
        padding: 2rem;
        box-shadow: 0.25rem 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
    }

    .booking-card:hover {
        box-shadow: 0.375rem 0.375rem 1rem rgba(0, 0, 0, 0.15);
        transform: translateY(-0.25rem);
    }

    .booking-info-row {
        display: flex;
        align-items: flex-start;
        gap: 1.5rem;
        margin-bottom: 1rem;
    }

    .info-icon {
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        background-color: rgba(139, 111, 71, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .info-icon i {
        font-size: 1.25rem;
        color: #6b4423;
    }

    .info-content {
        flex: 1;
    }

    .info-content h3 {
        font-size: 1rem;
        font-weight: 600;
        color: #5a4a3a;
        margin: 0 0 0.25rem 0;
    }

    .info-content p {
        font-size: 0.95rem;
        color: #6b4423;
        margin: 0;
        line-height: 1.4;
    }

    .booking-divider {
        height: 0.0625rem;
        background-color: rgba(90, 74, 58, 0.2);
        margin: 1rem 0;
    }

    /* Booking Complete Button */
    .booking-complete-btn {
        width: 100%;
        background-color: #6b4423;
        color: white;
        border: none;
        padding: 0.875rem;
        border-radius: 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 1.5rem;
        font-family: 'Georgia', serif;
    }

    .booking-complete-btn:hover {
        background-color: #5d3a1f;
        transform: translateY(-0.125rem);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.2);
    }

    /* Completed Badge */
    .completed-badge {
        width: 100%;
        background-color: #4a7c59;
        color: white;
        padding: 0.875rem;
        border-radius: 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        text-align: center;
        margin-top: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    /* Footer */
    footer {
        background-color: rgba(198, 175, 151, 0.7);
        padding: 3.125rem 3.75rem;
        margin-top: 5rem;
    }

    .footer-container {
        text-align: center;
    }

    .footer-title {
        font-size: 2.5rem;
        font-style: italic;
        color: #5a4a3a;
        margin-bottom: 2.1875rem;
        font-family: 'Brush Script MT', cursive;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 5rem;
    }

    .social-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: #5a4a3a;
        transition: transform 0.3s;
    }

    .social-item:hover {
        transform: translateY(-0.1875rem);
    }

    .social-item i {
        font-size: 2.25rem;
    }

    .social-item span {
        font-size: 1rem;
        font-weight: 500;
    }

    /* Responsive Design */
    @@media (max-width: 64rem) {
        .bookings-grid {
            grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
        }
    }

    @@media (max-width: 48rem) {
        .bookings-grid {
            grid-template-columns: 1fr;
        }

        .bookings-title {
            font-size: 2rem;
        }

        .sidebar {
            width: 6%;
            min-width: 5rem;
        }

        .main-content {
            margin-left: 6%;
        }

        .nav-item {
            font-size: 0.65rem;
            padding: 0.75rem 0.3125rem;
        }
    }
</style>

