        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        box-shadow: 0 0.125rem 0.375rem rgba(0, 0, 0, 0.2);
    }

    .edit-btn {
        color: #4a7c59;
    }

    .edit-btn:hover {
        background: #4a7c59;
        color: white;
