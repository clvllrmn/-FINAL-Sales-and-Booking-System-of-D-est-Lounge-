@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Sidebar Navigation -->
<aside class="sidebar">
    <div class="logo-container">
        <a href="@Url.Action("Homepage","Main")">
            <img src="~/Content/Pictures/DestLogo.png" class="sidebar-logo" alt="D'est Lounge">
        </a>
    </div>
    <nav class="sidebar-nav">
        <a href="@Url.Action("AdminHomepage","Main")" class="nav-item">HOME</a>
        <a href="@Url.Action("AdminBookingPage","Main")" class="nav-item">BOOKINGS</a>
        <a href="@Url.Action("AdminServicePage","Main")" class="nav-item ">SERVICES</a>
        <a href="@Url.Action("AdminContactPage","Main")" class="nav-item active">CONTACT</a>
        <a href="@Url.Action("AdminFAQsPage","Main")" class="nav-item">FAQs</a>
        <a href="@Url.Action("AdminInboxPage","Main")" class="nav-item">INBOX</a>
        <a href="@Url.Action("AdminSalesPage","Main")" class="nav-item">SALES</a>
    </nav>
    <div class="sidebar-footer">
        <a href="@Url.Action("LoginPage","Main")" class="admin-link">
            <i class="fa-regular fa-user"></i> Admin
        </a>
    </div>
</aside>

<!-- Main Content Area -->
<div class="main-content" ng-controller="DestLoungeSalesandBookingController">
    <!-- Contact Section -->
    <div class="contact-container">
        <div class="map-section">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3860.3958514777332!2d121.09269817603956!3d14.633456876269488!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397b8336d0f8f21%3A0x727b2bab93034843!2s35%20M.%20Cruz%20St%2C%20Marikina%2C%201800%20Metro%20Manila!5e0!3m2!1sen!2sph!4v1767855448965!5m2!1sen!2sph"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>

        <div class="contact-info">
            <div class="contact-header">
                <h1 class="contact-title">D'est Lounge</h1>
                <button class="add-contact-btn" ng-click="openAddContactModal()">
                    <i class="fa-solid fa-plus"></i> Add Contact Info
                </button>
            </div>

            <!-- Default Contact Info Items -->
            <div class="info-item">
                <div class="info-content">
                    <i class="fa-solid fa-location-dot"></i>
                    <div>
                        <h3>Find us at</h3>
                        <p>35 M. Cruz St. Sta. Elena St.</p>
                    </div>
                </div>
                <div class="admin-controls">
                    <button class="edit-btn" ng-click="editContact({id: 1, type: 'address', title: 'Find us at', details: ['35 M. Cruz St. Sta. Elena St.']})">
                        <i class="fa-solid fa-pen"></i>
                    </button>
                    <button class="delete-btn" ng-click="deleteContactById(1)">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>

            <div class="info-item">
                <div class="info-content">
                    <i class="fa-regular fa-clock"></i>
                    <div>
                        <h3>Business Hours</h3>
                        <p>9am to 7pm (mon-thurs)</p>
                        <p>8am to 8pm (fri-sun)</p>
                    </div>
                </div>
                <div class="admin-controls">
                    <button class="edit-btn" ng-click="editContact({id: 2, type: 'hours', title: 'Business Hours', details: ['9am to 7pm (mon-thurs)', '8am to 8pm (fri-sun)']})">
                        <i class="fa-solid fa-pen"></i>
                    </button>
                    <button class="delete-btn" ng-click="deleteContactById(2)">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>

            <div class="info-item">
                <div class="info-content">
                    <i class="fa-solid fa-phone"></i>
                    <div>
                        <h3>Call us!</h3>
                        <p><a href="tel:+639123456789">+63 912 345 6789</a></p>
                    </div>
                </div>
                <div class="admin-controls">
                    <button class="edit-btn" ng-click="editContact({id: 3, type: 'phone', title: 'Call us!', details: ['+63 912 345 6789']})">
                        <i class="fa-solid fa-pen"></i>
                    </button>
                    <button class="delete-btn" ng-click="deleteContactById(3)">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>

            <div class="info-item">
                <div class="info-content">
                    <i class="fa-solid fa-envelope"></i>
                    <div>
                        <h3>Email us!</h3>
                        <p><a href="mailto:destlounge@gmail.com">destlounge@gmail.com</a></p>
                    </div>
                </div>
                <div class="admin-controls">
                    <button class="edit-btn" ng-click="editContact({id: 4, type: 'email', title: 'Email us!', details: ['destlounge@gmail.com']})">
                        <i class="fa-solid fa-pen"></i>
                    </button>
                    <button class="delete-btn" ng-click="deleteContactById(4)">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Dynamic Contact Info Items (Added by Admin) -->
            <div class="info-item" ng-repeat="contact in additionalContactInfo">
                <div class="info-content">
                    <i class="fa-solid" ng-class="getIconClass(contact.type)"></i>
                    <div>
                        <h3>{{contact.title}}</h3>
                        <p ng-repeat="line in contact.details">
                            <a ng-if="contact.type === 'phone'" href="tel:{{line}}">{{line}}</a>
                            <a ng-if="contact.type === 'email'" href="mailto:{{line}}">{{line}}</a>
                            <span ng-if="contact.type !== 'phone' && contact.type !== 'email'">{{line}}</span>
                        </p>
                    </div>
                </div>
                <div class="admin-controls">
                    <button class="edit-btn" ng-click="editContact(contact)">
                        <i class="fa-solid fa-pen"></i>
                    </button>
                    <button class="delete-btn" ng-click="deleteContact(contact)">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit Contact Modal -->
    <div class="modal-overlay" ng-show="showContactModal" ng-click="closeContactModal()">
        <div class="contact-modal" ng-click="$event.stopPropagation()">
            <h2 class="modal-title">{{isEditMode ? 'Edit Contact Info' : 'Add Contact Info'}}</h2>

            <form name="contactForm" novalidate>
                <!-- Contact Type -->
                <div class="form-group">
                    <label for="contactType">Contact Type</label>
                    <select id="contactType"
                            name="contactType"
                            class="form-input"
                            ng-model="currentContact.type"
                            ng-change="updateContactTitle()"
                            required>
                        <option value="">Select Type</option>
                        <option value="address">Address</option>
                        <option value="hours">Business Hours</option>
                        <option value="phone">Phone Number</option>
                        <option value="email">Email</option>
                        <option value="social">Social Media</option>
                        <option value="other">Other</option>
                    </select>
                    <span class="error-message" ng-show="contactForm.contactType.$invalid && contactForm.contactType.$dirty">
                        Please select a contact type
                    </span>
                </div>

                <!-- Title -->
                <div class="form-group">
                    <label for="contactTitle">Title</label>
                    <input type="text"
                           id="contactTitle"
                           name="contactTitle"
                           class="form-input"
                           placeholder="e.g., Find us at, Call us, Email us"
                           ng-model="currentContact.title"
                           required>
                    <span class="error-message" ng-show="contactForm.contactTitle.$invalid && contactForm.contactTitle.$dirty">
                        Title is required
                    </span>
                </div>

                <!-- Details (Multiple Lines) -->
                <div class="form-group">
                    <label>Contact Details</label>
                    <div ng-repeat="detail in currentContact.details track by $index" class="detail-row">
                        <input type="text"
                               class="form-input detail-input"
                               placeholder="Enter detail (e.g., phone number, address line)"
                               ng-model="currentContact.details[$index]"
                               required>
                        <button type="button"
                                class="remove-detail-btn"
                                ng-click="removeDetail($index)"
                                ng-if="currentContact.details.length > 1">
                            <i class="fa-solid fa-minus"></i>
                        </button>
                    </div>
                    <button type="button" class="add-detail-btn" ng-click="addDetail()">
                        <i class="fa-solid fa-plus"></i> Add Another Line
                    </button>
                </div>

                <!-- Modal Actions -->
                <div class="modal-actions">
                    <button type="button" class="cancel-modal-btn" ng-click="closeContactModal()">
                        Cancel
                    </button>
                    <button type="button"
                            class="save-btn"
                            ng-click="saveContact()"
                            ng-disabled="contactForm.$invalid || !hasValidDetails()">
                        {{isEditMode ? 'Update' : 'Add'}} Contact Info
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <h2 class="footer-title">Follow our Socials!</h2>
            <div class="social-links">
                <a href="https://www.tiktok.com/&#64;destlounge"
                   class="social-item"
                   target="_blank">
                    <i class="fa-brands fa-tiktok"></i>
                    <span>destlounge</span>
                </a>
                <a href="https://www.facebook.com/profile.php?id=61578352581708" class="social-item" target="_blank">
                    <i class="fa-brands fa-facebook"></i>
                    <span>D'est Lounge</span>
                </a>
                <a href="https://www.instagram.com/destlounge/" class="social-item" target="_blank">
                    <i class="fa-brands fa-instagram"></i>
                    <span>destlounge</span>
                </a>
            </div>
        </div>
    </footer>
</div>

