@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Use the correct module name: DestLoungeSalesandBooking -->
<div ng-app="DestLoungeSalesandBooking" ng-controller="DestLoungeSalesandBookingController">

    <!-- Sidebar Navigation -->
    <aside class="sidebar">
        <div class="logo-container">
            <a href="@Url.Action("Homepage","Main")">
                <img src="~/Content/Pictures/DestLogo.png" class="sidebar-logo" alt="D'est Lounge">
            </a>
        </div>
        <nav class="sidebar-nav">
            <a href="@Url.Action("AdminHomepage","Main")" class="nav-item">HOME</a>
            <a href="@Url.Action("AdminBookingPage","Main")" class="nav-item">BOOKINGS</a>
            <a href="@Url.Action("AdminServicePage","Main")" class="nav-item">SERVICES</a>
            <a href="@Url.Action("AdminContactPage","Main")" class="nav-item active">CONTACT</a>
            <a href="@Url.Action("AdminFAQsPage","Main")" class="nav-item">FAQs</a>
            <a href="@Url.Action("AdminInboxPage","Main")" class="nav-item">INBOX</a>
            <a href="@Url.Action("AdminSalesPage","Main")" class="nav-item">SALES</a>
        </nav>
        <div class="sidebar-footer">
            <a href="@Url.Action("LoginPage","Main")" class="admin-link">
                <i class="fa-regular fa-user"></i> Admin
            </a>
        </div>
    </aside>

    <!-- Main Content Area -->
    <div class="main-content">
        <!-- Contact Section -->
        <div class="contact-container">
            <div class="map-section">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3860.3958514777332!2d121.09269817603956!3d14.633456876269488!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397b8336d0f8f21%3A0x727b2bab93034843!2s35%20M.%20Cruz%20St%2C%20Marikina%2C%201800%20Metro%20Manila!5e0!3m2!1sen!2sph!4v1767855448965!5m2!1sen!2sph"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>

            <div class="contact-info">
                <div class="contact-header">
                    <h1 class="contact-title">D'est Lounge</h1>
                    <button class="add-contact-btn" ng-click="addNewContact()">
                        <i class="fa-solid fa-plus"></i> Add Contact Info
                    </button>
                </div>

                <!-- Dynamically load contact info from database -->
                <div class="info-item" ng-repeat="contact in contactInfo">
                    <div class="info-content">
                        <i ng-class="contact.icon"></i>
                        <div>
                            <h3>{{ contact.label }}</h3>
                            <p ng-if="contact.infoType === 'phone'">
                                <a href="tel:{{ contact.value }}">{{ contact.value }}</a>
                            </p>
                            <p ng-if="contact.infoType === 'email'">
                                <a href="mailto:{{ contact.value }}">{{ contact.value }}</a>
                            </p>
                            <!-- Use ng-bind-html to render HTML like <br> tags -->
                            <div ng-if="contact.infoType !== 'phone' && contact.infoType !== 'email'" ng-bind-html="contact.value"></div>
                        </div>
                    </div>
                    <div class="admin-controls">
                        <button class="edit-btn" ng-click="editContact($index)" title="Edit">
                            <i class="fa-solid fa-pen"></i>
                        </button>
                        <button class="delete-btn" ng-click="deleteContact($index)" title="Delete">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </div>
                </div>

                <!-- Fallback message if no contact info -->
                <div ng-if="contactInfo.length === 0" class="no-data-message">
                    <p>No contact information added yet. Click "Add Contact Info" to get started.</p>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <div class="footer-container">
                <h2 class="footer-title">Follow our Socials!</h2>
                <div class="social-links">
                    <a href="https://www.tiktok.com/&#64;destlounge"
                       class="social-item"
                       target="_blank">
                        <i class="fa-brands fa-tiktok"></i>
                        <span>destlounge</span>
                    </a>
                    <a href="https://www.facebook.com/profile.php?id=61578352581708" class="social-item" target="_blank">
                        <i class="fa-brands fa-facebook"></i>
                        <span>D'est Lounge</span>
                    </a>
                    <a href="https://www.instagram.com/destlounge/" class="social-item" target="_blank">
                        <i class="fa-brands fa-instagram"></i>
                        <span>destlounge</span>
                    </a>
                </div>
            </div>
        </footer>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Georgia', serif;
            background-color: #d4c4b0;
        }

        /* Sidebar Styles */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 10%;
            min-width: 9rem;
            height: 100vh;
            background-color: #e7dfd6;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1.25rem 0;
            z-index: 1000;
        }

        .logo-container {
            margin-bottom: 2rem;
        }

        .sidebar-logo {
            width: 3.5rem;
            height: auto;
        }

        .sidebar-nav {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 0.3rem;
            width: 100%;
        }

        .nav-item {
            color: white;
            text-decoration: none;
            padding: 1rem 0.625rem;
            font-size: 1rem;
            font-weight: 500;
            text-align: center;
            transition: background-color 0.3s;
            letter-spacing: 0.0625rem;
            display: block;
        }

            .nav-item:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

            .nav-item.active {
                background-color: rgba(139, 111, 71, 0.5);
                border-left: 0.25rem solid #8b6f47;
            }

        .sidebar-footer {
            margin-top: auto;
            padding: 1.25rem 0;
        }

        .admin-link {
            color: white;
            text-decoration: none;
            font-size: 0.75rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.3125rem;
        }

            .admin-link i {
                font-size: 1.25rem;
            }

        /* Main Content Area */
        .main-content {
            margin-left: 10%;
            min-height: 100vh;
            background-color: #d4c4b0;
        }

        /* Contact Container */
        .contact-container {
            display: flex;
            min-height: calc(100vh - 25rem);
            background-color: #d4c4b0;
            padding: 3rem;
            gap: 3rem;
        }

        .map-section {
            flex: 1;
            min-height: 31.25rem;
            border: 0.1875rem solid #5a4a3a;
            border-radius: 0.625rem;
            overflow: hidden;
            box-shadow: 0.25rem 0.25rem 0.75rem rgba(0, 0, 0, 0.2);
        }

        .contact-info {
            flex: 1;
            background-color: rgba(232, 223, 213, 0.9);
            padding: 3rem;
            border-radius: 3.125rem;
            border: 0.1875rem solid #5a4a3a;
            box-shadow: 0.25rem 0.25rem 0.75rem rgba(0, 0, 0, 0.2);
            overflow-y: auto;
            max-height: 600px;
        }

        .contact-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .contact-title {
            font-size: 3.5rem;
            font-weight: 600;
            color: #6b4423;
            margin: 0 0 1rem 0;
            font-family: 'Brush Script MT', cursive;
            font-style: italic;
        }

        .add-contact-btn {
            background-color: #4a7c59;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .add-contact-btn:hover {
                background-color: #3a6449;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1.5rem;
            padding: 1.5rem;
            background-color: rgba(249, 246, 243, 0.8);
            border-radius: 0.625rem;
            transition: all 0.3s ease;
            position: relative;
        }

            .info-item:hover {
                transform: translateX(0.625rem);
                box-shadow: 0.25rem 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
            }

        .info-content {
            display: flex;
            align-items: flex-start;
            gap: 1.5rem;
            flex: 1;
        }

        .info-item i {
            font-size: 1.5rem;
            color: #8b6f47;
            min-width: 2rem;
        }

        .info-item h3 {
            font-size: 1.2rem;
            font-weight: 600;
            color: #6b4423;
            margin: 0 0 0.5rem 0;
        }

        .info-item p {
            font-size: 1rem;
            color: #5a4a3a;
            margin: 0.2rem 0;
            word-break: break-word;
        }

        .info-item a {
            color: #6b4423;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .info-item a:hover {
                color: #8b6f47;
                text-decoration: underline;
            }

        /* Admin Controls */
        .admin-controls {
            display: flex;
            gap: 0.5rem;
            align-items: flex-start;
            margin-left: 1rem;
        }

        .edit-btn,
        .delete-btn {
            background: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 50%;
            width: 2rem;
            height: 2rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
            box-shadow: 0 0.125rem 0.375rem rgba(0, 0, 0, 0.2);
        }

        .edit-btn {
            color: #4a7c59;
        }

            .edit-btn:hover {
                background: #4a7c59;
                color: white;
                transform: scale(1.1);
            }

        .delete-btn {
            color: #c84b4b;
        }

            .delete-btn:hover {
                background: #c84b4b;
                color: white;
                transform: scale(1.1);
            }

            .edit-btn i,
            .delete-btn i {
                font-size: 0.875rem;
            }

        .no-data-message {
            text-align: center;
            padding: 2rem;
            color: #8b6f47;
            font-style: italic;
        }

        /* Footer */
        footer {
            background-color: rgba(198, 175, 151, 0.7);
            padding: 3.125rem 3.75rem;
            margin-top: 5rem;
        }

        .footer-container {
            text-align: center;
        }

        .footer-title {
            font-size: 2.5rem;
            font-style: italic;
            color: #5a4a3a;
            margin-bottom: 2.1875rem;
            font-family: 'Brush Script MT', cursive;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 5rem;
        }

        .social-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
            color: #5a4a3a;
            transition: transform 0.3s;
        }

            .social-item:hover {
                transform: translateY(-0.1875rem);
            }

            .social-item i {
                font-size: 2.25rem;
            }

            .social-item span {
                font-size: 1rem;
                font-weight: 500;
            }

        /* Responsive Design */
        @@media (max-width: 60rem) {
            .contact-container {
                flex-direction: column;
            }

            .map-section {
                min-height: 25rem;
            }

            .sidebar {
                width: 6%;
                min-width: 5rem;
            }

            .main-content {
                margin-left: 6%;
            }

            .nav-item {
                font-size: 0.65rem;
                padding: 0.75rem 0.3125rem;
            }

            .contact-info {
                max-height: none;
            }
        }
    </style>

</div> <!-- Close ng-app and ng-controller div -->
