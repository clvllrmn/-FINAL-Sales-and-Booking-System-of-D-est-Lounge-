        display: flex;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .detail-input {
        flex: 1;
    }

    .remove-detail-btn {
        background-color: #c84b4b;
        color: white;
        border: none;
        border-radius: 50%;
