    .info-item h3 {
        font-size: 1.2rem;
        font-weight: 600;
        color: #6b4423;
        margin: 0 0 0.5rem 0;
    }

    .info-item p {
        font-size: 1rem;
        color: #5a4a3a;
        margin: 0.2rem 0;
    }

    .info-item a {
        color: #6b4423;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .info-item a:hover {
        color: #8b6f47;
