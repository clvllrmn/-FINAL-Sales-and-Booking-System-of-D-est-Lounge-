        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .modal-title {
        color: #5d4037;
        margin-top: 0;
        margin-bottom: 2rem;
        font-size: 2rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
