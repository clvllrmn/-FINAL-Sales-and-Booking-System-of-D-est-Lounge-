@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<header>
    <div class="header-container">
        <div class="logo">
            <a href="@Url.Action("Homepage","Main")">
                <img src="~/Content/Pictures/DestLogo.png" class="logo" alt="D'est Lounge">
            </a>
        </div>
        <nav class="main-nav">
            <a href="@Url.Action("Homepage","Main")">HOME</a>
            <a href="@Url.Action("ServicePage","Main")">SERVICES</a>
            <a href="@Url.Action("ContactPage","Main")">CONTACT</a>
            <a href="@Url.Action("FAQsPage","Main")">FAQs</a>
        </nav>
        <div class="header-actions">
            <a href="@Url.Action("LoginPage","Main")" class="login-link">
                <i class="fa-regular fa-user"></i> LOGIN/SIGNUP
            </a>
            <a href="@Url.Action("ContactPage","Main")" class="email-icon">
                <i class="fa-solid fa-envelope"></i>
            </a>
        </div>
    </div>
</header>

<div class="profile-container">
    <aside class="sidebar">
        <nav class="profile-nav">
            <a href="@Url.Action("ProfilePage","Main")" class="nav-item">Profile</a>
            <a href="@Url.Action("CurrentBookingPage","Main")" class="nav-item">Current booking</a>
            <a href="@Url.Action("ReviewPage","Main")" class="nav-item active">To Review</a>
        </nav>
    </aside>

    <main class="profile-content">
        <div class="review-card">
            <h2 class="review-service-name">Service</h2>

            <form id="reviewForm" method="POST" action="@Url.Action("SubmitReview", "Main")" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Hidden field for backend to receive booking ID -->
                <input type="hidden" name="BookingId" id="bookingId" value="" />

                <!-- Star Rating -->
                <div class="rating-section">
                    <p class="rating-label">Rate your experience</p>
                    <div class="star-rating">
                        <input type="radio" id="star5" name="Rating" value="5" />
                        <label for="star5" class="star">★</label>

                        <input type="radio" id="star4" name="Rating" value="4" />
                        <label for="star4" class="star">★</label>

                        <input type="radio" id="star3" name="Rating" value="3" />
                        <label for="star3" class="star">★</label>

                        <input type="radio" id="star2" name="Rating" value="2" />
                        <label for="star2" class="star">★</label>

                        <input type="radio" id="star1" name="Rating" value="1" />
                        <label for="star1" class="star">★</label>
                    </div>
                </div>

                <!-- Review Text -->
                <div class="review-text-section">
                    <label class="review-label">Share your thoughts</label>
                    <textarea name="ReviewText"
                              id="reviewText"
                              class="review-textarea"
                              placeholder="Tell us about your experience..."
                              rows="5"></textarea>
                </div>

                <!-- Photo Upload -->
                <div class="photo-upload-section">
                    <label class="review-label">Add your thoughts</label>
                    <div class="photo-upload-box" id="photoUploadBox">
                        <input type="file"
                               id="photoInput"
                               name="PhotoUpload"
                               accept="image/*"
                               style="display: none;" />
                        <div class="upload-placeholder" id="uploadPlaceholder">
                            <i class="fa-solid fa-camera camera-icon"></i>
                            <p class="upload-text">Add photo</p>
                        </div>
                        <div class="photo-preview" id="photoPreview" style="display: none;">
                            <img id="previewImage" src="" alt="Preview" />
                            <button type="button" class="remove-photo" id="removePhoto">×</button>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="review-actions">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("CurrentBooking","Main")'">
                        Cancel
                    </button>
                    <button type="submit" class="btn-upload">
                        Upload
                    </button>
                </div>
            </form>
        </div>
    </main>
</div>

<footer>
    <div class="footer-container">
        <h2 class="footer-title">Follow our Socials!</h2>
        <div class="social-links">
            <a href="https://www.tiktok.com/&#64;destlounge"
               class="social-item"
               target="_blank">
                <i class="fa-brands fa-tiktok"></i>
                <span>destlounge</span>
            </a>
            <a href="https://www.facebook.com/profile.php?id=61578352581708" class="social-item" target="_blank">
                <i class="fa-brands fa-facebook"></i>
                <span>D'est Lounge</span>
            </a>
            <a href="https://www.instagram.com/destlounge/" class="social-item" target="_blank">
                <i class="fa-brands fa-instagram"></i>
                <span>destlounge</span>
            </a>
        </div>
    </div>
</footer>

<script>
    // Photo upload preview functionality
    const photoInput = document.getElementById('photoInput');
    const photoUploadBox = document.getElementById('photoUploadBox');
    const uploadPlaceholder = document.getElementById('uploadPlaceholder');
    const photoPreview = document.getElementById('photoPreview');
    const previewImage = document.getElementById('previewImage');
    const removePhoto = document.getElementById('removePhoto');

    photoUploadBox.addEventListener('click', function () {
        if (photoPreview.style.display === 'none') {
            photoInput.click();
        }
    });

    photoInput.addEventListener('change', function (e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                previewImage.src = e.target.result;
                uploadPlaceholder.style.display = 'none';
                photoPreview.style.display = 'block';
            }
            reader.readAsDataURL(file);
        }
    });

    removePhoto.addEventListener('click', function (e) {
        e.stopPropagation();
        photoInput.value = '';
        photoPreview.style.display = 'none';
        uploadPlaceholder.style.display = 'flex';
    });
</script>

<style>
    /* ===== SHARED CONTAINER & SIDEBAR ===== */
.profile-container {
    display: flex;
    min-height: calc(100vh - 200px);
    background-color: #f5f0eb;
}

.sidebar {
    width: 280px;
    background-color: #d4c4b5;
    padding: 0;
    min-height: 100%;
}

.profile-nav {
    display: flex;
    flex-direction: column;
    padding-top: 40px;
}

.profile-nav .nav-item {
    padding: 20px 35px;
    color: #5a4a3a;
    text-decoration: none;
    font-size: 18px;
    font-weight: 500;
    transition: all 0.3s ease;
    border-left: 4px solid transparent;
    display: block;
}

.profile-nav .nav-item:hover {
    background-color: #c9b5a3;
    border-left-color: #6b5544;
}

.profile-nav .nav-item.active {
    background-color: #c9b5a3;
    font-weight: 600;
    border-left-color: #6b5544;
}

.profile-content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 80px 40px;
}

/* ===== REVIEW PAGE SPECIFIC ===== */
.review-card {
    background-color: #e8ddd1;
    border-radius: 30px;
    padding: 50px 60px;
    max-width: 600px;
    width: 100%;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.review-service-name {
    color: #6b5544;
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 30px;
    text-align: left;
}

.rating-section {
    margin-bottom: 30px;
}

.rating-label {
    color: #6b5544;
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 15px;
    text-align: center;
}

.star-rating {
    display: flex;
    flex-direction: row-reverse;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
}

.star-rating input {
    display: none;
}

.star-rating label {
    font-size: 50px;
    color: #d4c4b5;
    cursor: pointer;
    transition: color 0.2s ease;
}

.star-rating label:hover,
.star-rating label:hover ~ label {
    color: #f5a623;
}

.star-rating input:checked ~ label {
    color: #f5a623;
}

.review-text-section {
    margin-bottom: 25px;
}

.review-label {
    color: #6b5544;
    font-size: 18px;
    font-weight: 500;
    display: block;
    margin-bottom: 10px;
}

.review-textarea {
    width: 100%;
    padding: 15px;
    border: none;
    border-radius: 15px;
    background-color: #f8f4ef;
    color: #5a4a3a;
    font-size: 16px;
    font-family: inherit;
    resize: vertical;
    min-height: 120px;
    box-sizing: border-box;
}

.review-textarea:focus {
    outline: 2px solid #c9b5a3;
}

.review-textarea::placeholder {
    color: #a89585;
}

.photo-upload-section {
    margin-bottom: 35px;
}

.photo-upload-box {
    background-color: #f8f4ef;
    border-radius: 15px;
    padding: 40px;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
    min-height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.photo-upload-box:hover {
    background-color: #f0e8dd;
}

.upload-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.camera-icon {
    font-size: 60px;
    color: #6b5544;
    margin-bottom: 10px;
}

.upload-text {
    color: #6b5544;
    font-size: 16px;
    margin: 0;
}

.photo-preview {
    position: relative;
    width: 100%;
    max-width: 300px;
    margin: 0 auto;
}

.photo-preview img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    display: block;
}

.remove-photo {
    position: absolute;
    top: -10px;
    right: -10px;
    background-color: #6b5544;
    color: white;
    border: none;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    font-size: 20px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    transition: background-color 0.3s ease;
}

.remove-photo:hover {
    background-color: #5a4635;
}

.review-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-top: 40px;
}

.btn-cancel,
.btn-upload {
    padding: 15px 45px;
    border: none;
    border-radius: 25px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: #6b5544;
    color: white;
}

.btn-cancel:hover,
.btn-upload:hover {
    background-color: #5a4635;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* ===== RESPONSIVE ===== */
@@media (max-width: 768px) {
    .profile-container {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        padding: 20px 0;
    }

    .profile-nav {
        flex-direction: row;
        overflow-x: auto;
        white-space: nowrap;
        padding-top: 0;
        -webkit-overflow-scrolling: touch;
    }

    .profile-nav .nav-item {
        white-space: nowrap;
        padding: 15px 20px;
        border-left: none;
        border-bottom: 4px solid transparent;
    }

    .profile-nav .nav-item:hover {
        border-left-color: transparent;
        border-bottom-color: #6b5544;
    }

    .profile-nav .nav-item.active {
        border-left-color: transparent;
        border-bottom-color: #6b5544;
    }

    .profile-content {
        padding: 40px 20px;
    }

    .review-card {
        padding: 30px 25px;
    }

    .review-service-name {
        font-size: 26px;
        margin-bottom: 30px;
    }

    .star-rating label {
        font-size: 40px;
    }

    .photo-upload-box {
        padding: 30px;
    }

    .camera-icon {
        font-size: 50px;
    }

    .review-actions {
        flex-direction: column;
        gap: 15px;
    }

    .btn-cancel,
    .btn-upload {
        width: 100%;
        text-align: center;
    }
}

@@media (max-width: 480px) {
    .review-card {
        padding: 25px 20px;
        border-radius: 20px;
    }

    .profile-content {
        padding: 30px 15px;
    }

    .review-service-name {
        font-size: 24px;
    }

    .star-rating label {
        font-size: 35px;
    }

    .star-rating {
        gap: 5px;
    }

    .photo-upload-box {
        padding: 25px;
        min-height: 120px;
    }

    .btn-cancel,
    .btn-upload {
        padding: 12px 30px;
        font-size: 15px;
    }
}
</style>
