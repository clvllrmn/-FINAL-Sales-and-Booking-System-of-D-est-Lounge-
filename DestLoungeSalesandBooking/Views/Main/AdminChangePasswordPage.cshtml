@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Sidebar Navigation -->
<aside class="sidebar">
    <div class="logo-container">
        <a href="@Url.Action("Homepage","Main")">
            <img src="~/Content/Pictures/DestLogo.png" class="sidebar-logo" alt="D'est Lounge">
        </a>
    </div>
    <nav class="sidebar-nav">
        <a href="@Url.Action("AdminHomepage","Main")" class="nav-item">HOME</a>
        <a href="@Url.Action("AdminBookingPage","Main")" class="nav-item">BOOKINGS</a>
        <a href="@Url.Action("AdminServicePage","Main")" class="nav-item">SERVICES</a>
        <a href="@Url.Action("AdminContactPage","Main")" class="nav-item">CONTACT</a>
        <a href="@Url.Action("AdminFAQsPage","Main")" class="nav-item">FAQs</a>
        <a href="@Url.Action("AdminInboxPage","Main")" class="nav-item">INBOX</a>
        <a href="@Url.Action("AdminSalesPage","Main")" class="nav-item">SALES</a>
    </nav>
    <div class="sidebar-footer">
        <a href="@Url.Action("Logout","Account")" class="admin-link">
            <i class="fa-solid fa-right-from-bracket"></i> Logout
        </a>
    </div>
</aside>

<!-- Main Content -->
<div class="main-content">
    <div class="page-wrapper">

        <div class="change-password-card">
            <div class="card-header">
                <div class="lock-icon">
                    <i class="fa-solid fa-lock"></i>
                </div>
                <h1 class="card-title">Change Password</h1>
                <p class="card-subtitle">Update your admin account password</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fa-solid fa-circle-check"></i>
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-error">
                    <i class="fa-solid fa-circle-exclamation"></i>
                    @TempData["ErrorMessage"]
                </div>
            }

            <form method="post" action="@Url.Action("ChangePassword", "Account")">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="form-label">Current Password</label>
                    <input type="password"
                           name="currentPassword"
                           class="form-input"
                           placeholder="Enter current password"
                           required />
                </div>

                <div class="form-group">
                    <label class="form-label">New Password</label>
                    <input type="password"
                           name="newPassword"
                           class="form-input"
                           placeholder="Enter new password"
                           required />
                </div>

                <div class="form-group">
                    <label class="form-label">Confirm New Password</label>
                    <input type="password"
                           name="confirmNewPassword"
                           class="form-input"
                           placeholder="Confirm new password"
                           required />
                </div>

                <p class="password-hint">
                    <i class="fa-solid fa-circle-info"></i>
                    Min. 8 characters &bull; uppercase &bull; lowercase &bull; number &bull; special character (@@$!%*?&#)
                </p>

                <div class="form-actions">
                    <a href="@Url.Action("AdminHomepage", "Main")" class="btn-cancel">
                        <i class="fa-solid fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn-submit">
                        Update Password <i class="fa-solid fa-check"></i>
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Georgia', serif;
        background-color: #d4c4b0;
    }

    /* Sidebar */
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 10%;
        min-width: 9rem;
        height: 100vh;
        background-color: #e7dfd6;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.25rem 0;
        z-index: 1000;
    }

    .logo-container {
        margin-bottom: 2rem;
    }

    .sidebar-logo {
        width: 3.5rem;
        height: auto;
    }

    .sidebar-nav {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        width: 100%;
    }

    .nav-item {
        color: white;
        text-decoration: none;
        padding: 1rem 0.625rem;
        font-size: 1rem;
        font-weight: 500;
        text-align: center;
        transition: background-color 0.3s;
        letter-spacing: 0.0625rem;
        display: block;
    }

        .nav-item:hover {
            background-color: rgba(255,255,255,0.1);
        }

        .nav-item.active {
            background-color: rgba(139,111,71,0.5);
            border-left: 0.25rem solid #8b6f47;
        }

    .sidebar-footer {
        margin-top: auto;
        padding: 1.25rem 0;
    }

    .admin-link {
        color: white;
        text-decoration: none;
        font-size: 0.75rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.3125rem;
    }

        .admin-link i {
            font-size: 1.25rem;
        }

    /* Main content */
    .main-content {
        margin-left: 10%;
        min-height: 100vh;
        background-color: #d4c4b0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 2rem;
    }

    .page-wrapper {
        width: 100%;
        max-width: 30rem;
    }

    /* Card */
    .change-password-card {
        background-color: rgba(232, 223, 213, 0.95);
        border-radius: 1.25rem;
        padding: 2.5rem 2.5rem;
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.15);
    }

    .card-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .lock-icon {
        background-color: #5a4a3a;
        color: white;
        width: 4rem;
        height: 4rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin: 0 auto 1rem;
    }

    .card-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #3a2a1a;
        margin-bottom: 0.25rem;
    }

    .card-subtitle {
        font-size: 0.9rem;
        color: #6b5040;
    }

    /* Alerts */
    .alert {
        padding: 0.875rem 1rem;
        border-radius: 0.5rem;
        font-size: 0.9rem;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .alert-success {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
    }

    .alert-error {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }

    /* Form */
    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-label {
        display: block;
        font-size: 0.85rem;
        font-weight: 600;
        color: #3a2a1a;
        margin-bottom: 0.4rem;
        letter-spacing: 0.03em;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1.5px solid #c6af97;
        border-radius: 0.5rem;
        background-color: #faf6f1;
        font-size: 0.95rem;
        color: #3a2a1a;
        transition: border-color 0.2s, box-shadow 0.2s;
        font-family: 'Georgia', serif;
    }

        .form-input:focus {
            outline: none;
            border-color: #8b6f47;
            box-shadow: 0 0 0 3px rgba(139,111,71,0.15);
        }

    .password-hint {
        font-size: 0.78rem;
        color: #7a6050;
        margin-bottom: 1.5rem;
        line-height: 1.5;
        display: flex;
        gap: 0.4rem;
        align-items: flex-start;
    }

        .password-hint i {
            margin-top: 0.15rem;
            flex-shrink: 0;
        }

    /* Buttons */
    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: space-between;
        align-items: center;
    }

    .btn-cancel {
        color: #5a4a3a;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        transition: color 0.2s;
    }

        .btn-cancel:hover {
            color: #3a2a1a;
        }

    .btn-submit {
        background-color: #5a4a3a;
        color: white;
        border: none;
        padding: 0.75rem 1.75rem;
        border-radius: 1.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: background-color 0.3s, transform 0.2s;
        font-family: 'Georgia', serif;
    }

        .btn-submit:hover {
            background-color: #3a2a1a;
            transform: translateY(-0.1rem);
        }

    @@media (max-width: 48rem) {
        .sidebar {
            width: 6%;
            min-width: 5rem;
        }

        .main-content {
            margin-left: 6%;
        }

        .nav-item {
            font-size: 0.65rem;
            padding: 0.75rem 0.3125rem;
        }

        .change-password-card {
            padding: 1.75rem 1.25rem;
        }
    }
</style>
