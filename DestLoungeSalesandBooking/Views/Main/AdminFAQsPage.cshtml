@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Sidebar Navigation -->
<aside class="sidebar">
    <div class="logo-container">
        <a href="@Url.Action("Homepage","Main")">
            <img src="~/Content/Pictures/DestLogo.png" class="sidebar-logo" alt="D'est Lounge">
        </a>
    </div>
    <nav class="sidebar-nav">
        <a href="@Url.Action("AdminHomepage","Main")" class="nav-item">HOME</a>
        <a href="@Url.Action("AdminBookingPage","Main")" class="nav-item">BOOKINGS</a>
        <a href="@Url.Action("AdminServicePage","Main")" class="nav-item ">SERVICES</a>
        <a href="@Url.Action("AdminContactPage","Main")" class="nav-item">CONTACT</a>
        <a href="@Url.Action("AdminFAQsPage","Main")" class="nav-item active">FAQs</a>
        <a href="@Url.Action("AdminInboxPage","Main")" class="nav-item">INBOX</a>
        <a href="@Url.Action("AdminSalesPage","Main")" class="nav-item">SALES</a>
    </nav>
    <div class="sidebar-footer">
        <a href="@Url.Action("LoginPage","Main")" class="admin-link">
            <i class="fa-regular fa-user"></i> Admin
        </a>
    </div>
</aside>

<!-- Main Content Area -->
<div class="main-content">
    <!-- FAQs Section -->
    <div class="faqs-container" ng-controller="DestLoungeSalesandBookingController">
        <h1 class="faqs-title">FAQS</h1>

        <div class="faqs-grid">
            <div class="faq-card"
                 ng-repeat="faq in faqs"
                 ng-class="{'active': faq.isOpen}">
                <div class="admin-controls">
                    <button class="edit-btn" ng-click="editFaq($index); $event.stopPropagation();">
                        <i class="fa-solid fa-pen"></i>
                    </button>
                    <button class="delete-btn" ng-click="deleteFaq($index); $event.stopPropagation();">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
                <div class="faq-question" ng-click="toggleFaq($index)">
                    <h3>{{faq.question}}</h3>
                    <i class="fa-solid" ng-class="faq.isOpen ? 'fa-chevron-up' : 'fa-chevron-down'"></i>
                </div>
                <div class="faq-answer" ng-show="faq.isOpen">
                    <p>{{faq.answer}}</p>
                </div>
            </div>
        </div>

        <!-- Add FAQ Button -->
        <div class="add-faq-container">
            <button class="add-faq-btn" ng-click="addNewFaq()">
                Add FAQ
            </button>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <h2 class="footer-title">Follow our Socials!</h2>
            <div class="social-links">
                <a href="https://www.tiktok.com/&#64;destlounge"
                   class="social-item"
                   target="_blank">
                    <i class="fa-brands fa-tiktok"></i>
                    <span>destlounge</span>
                </a>
                <a href="https://www.facebook.com/profile.php?id=61578352581708" class="social-item" target="_blank">
                    <i class="fa-brands fa-facebook"></i>
                    <span>D'est Lounge</span>
                </a>
                <a href="https://www.instagram.com/destlounge/" class="social-item" target="_blank">
                    <i class="fa-brands fa-instagram"></i>
                    <span>destlounge</span>
                </a>
            </div>
        </div>
    </footer>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Georgia', serif;
        background-color: #d4c4b0;
    }

    /* Sidebar Styles */
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 10%;
        min-width: 9rem;
        height: 100vh;
        background-color: #e7dfd6;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.25rem 0;
        z-index: 1000;
    }

    .logo-container {
        margin-bottom: 2rem;
    }

    .sidebar-logo {
        width: 3.5rem;
        height: auto;
    }

    .sidebar-nav {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        width: 100%;
    }

    .nav-item {
        color: #5a4a3a;
        text-decoration: none;
        padding: 1rem 0.625rem;
        font-size: 1rem;
        font-weight: 500;
        text-align: center;
        transition: background-color 0.3s;
        letter-spacing: 0.0625rem;
        display: block;
    }

    .nav-item:hover {
        background-color: rgba(90, 74, 58, 0.1);
    }

    .nav-item.active {
        background-color: rgba(139, 111, 71, 0.3);
        border-left: 0.25rem solid #8b6f47;
    }

    .sidebar-footer {
        margin-top: auto;
        padding: 1.25rem 0;
    }

    .admin-link {
        color: #5a4a3a;
        text-decoration: none;
        font-size: 0.75rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.3125rem;
    }

    .admin-link i {
        font-size: 1.25rem;
    }

    /* Main Content Area */
    .main-content {
        margin-left: 10%;
        min-height: 100vh;
        background-color: #d4c4b0;
    }

    /* FAQs Container */
    .faqs-container {
        min-height: calc(100vh - 25rem);
        background-color: #e7dfd6;
        padding: 3rem 2rem;
    }

    .faqs-title {
        font-size: 4rem;
        font-weight: 600;
        color: #6b4423;
        text-align: center;
        margin: 0 0 3rem 0;
        text-shadow: 0.125rem 0.125rem 0.25rem rgba(0, 0, 0, 0.1);
    }

    .faqs-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        max-width: 87.5rem;
        margin: 0 auto;
    }

    .faq-card {
        background-color: #6b4423;
        border-radius: 1.25rem;
        padding: 2rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0.25rem 0.25rem 0.75rem rgba(0, 0, 0, 0.2);
        min-height: 12.5rem;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .faq-card:hover {
        transform: translateY(-0.3125rem);
        box-shadow: 0.375rem 0.375rem 1rem rgba(0, 0, 0, 0.3);
    }

    .faq-card.active {
        background-color: #5d3a1f;
    }

    /* Admin Controls */
    .admin-controls {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        display: flex;
        gap: 0.5rem;
        z-index: 10;
    }

    .edit-btn,
    .delete-btn {
        background: rgba(255, 255, 255, 0.95);
        border: none;
        border-radius: 50%;
        width: 2rem;
        height: 2rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        box-shadow: 0 0.125rem 0.375rem rgba(0, 0, 0, 0.2);
    }

    .edit-btn {
        color: #4a7c59;
    }

    .edit-btn:hover {
        background: #4a7c59;
        color: white;
        transform: scale(1.1);
    }

    .delete-btn {
        color: #c84b4b;
    }

    .delete-btn:hover {
        background: #c84b4b;
        color: white;
        transform: scale(1.1);
    }

    .edit-btn i,
    .delete-btn i {
        font-size: 0.875rem;
    }

    .faq-question {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        padding-top: 2rem;
    }

    .faq-question h3 {
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0;
        line-height: 1.4;
        flex: 1;
    }

    .faq-question i {
        color: white;
        font-size: 1.2rem;
        transition: transform 0.3s ease;
    }

    .faq-answer {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 0.125rem solid rgba(255, 255, 255, 0.3);
        animation: fadeIn 0.3s ease;
    }

    .faq-answer p {
        color: white;
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
    }

    /* Add FAQ Button */
    .add-faq-container {
        text-align: center;
        padding: 2rem;
        margin-top: 2rem;
    }

    .add-faq-btn {
        background-color: #6b4423;
        color: white;
        border: none;
        padding: 0.9375rem 2.5rem;
        border-radius: 1.875rem;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 600;
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.2);
    }

    .add-faq-btn:hover {
        background-color: #5d3a1f;
        transform: translateY(-0.125rem);
        box-shadow: 0 0.375rem 0.75rem rgba(0, 0, 0, 0.3);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-0.625rem);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Footer */
    footer {
        background-color: rgba(198, 175, 151, 0.7);
        padding: 3.125rem 3.75rem;
        margin-top: 5rem;
    }

    .footer-container {
        text-align: center;
    }

    .footer-title {
        font-size: 2.5rem;
        font-style: italic;
        color: #5a4a3a;
        margin-bottom: 2.1875rem;
        font-family: 'Brush Script MT', cursive;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 5rem;
    }

    .social-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: #5a4a3a;
        transition: transform 0.3s;
    }

    .social-item:hover {
        transform: translateY(-0.1875rem);
    }

    .social-item i {
        font-size: 2.25rem;
    }

    .social-item span {
        font-size: 1rem;
        font-weight: 500;
    }

    /* Responsive Design */
    @@media (max-width: 64rem) {
        .faqs-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 48rem) {
        .faqs-grid {
            grid-template-columns: 1fr;
        }

        .faqs-title {
            font-size: 3rem;
        }

        .sidebar {
            width: 6%;
            min-width: 5rem;
        }

        .main-content {
            margin-left: 6%;
        }

        .nav-item {
            font-size: 0.65rem;
            padding: 0.75rem 0.3125rem;
        }
    }
</style>