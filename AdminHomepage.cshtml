                <img src="~/Content/Pictures/nail1.jpg" alt="Nail Design 1">
            </div>
            <div class="polaroid-caption">
                <i class="fa-regular fa-heart"></i>
            </div>
        </div>

        <div class="polaroid-card">
            <div class="admin-controls">
                <button class="edit-btn" onclick="editImage(2)">
                    <i class="fa-solid fa-pen"></i>
                </button>
                <button class="delete-btn" onclick="deleteImage(2)">
                    <i class="fa-solid fa-trash"></i>
                </button>
            </div>
            <div class="polaroid-image">
                <img src="~/Content/Pictures/nail2.jpg" alt="Nail Design 2">
            </div>
            <div class="polaroid-caption">
                <i class="fa-regular fa-heart"></i>
            </div>
        </div>

        <div class="polaroid-card">
            <div class="admin-controls">
                <button class="edit-btn" onclick="editImage(3)">
                    <i class="fa-solid fa-pen"></i>
                </button>
                <button class="delete-btn" onclick="deleteImage(3)">
                    <i class="fa-solid fa-trash"></i>
                </button>
            </div>
            <div class="polaroid-image">
                <img src="~/Content/Pictures/nail3.jpg" alt="Nail Design 3">
            </div>
            <div class="polaroid-caption">
                <i class="fa-regular fa-heart"></i>
            </div>
        </div>
    </div>

    <!-- Add Photo Button -->
    <div class="add-photo-container">
        <button class="add-photo-btn" onclick="addNewPhoto()">
            Add Photo
        </button>
    </div>

    <!-- D'est Description Box with Admin Controls -->
    <div class="dest-description">
        <div class="description-header">
            <h3 class="dest-title">D'est</h3>
            <div class="description-controls">
                <button class="edit-btn" onclick="editDescription()">
                    <i class="fa-solid fa-pen"></i>
                </button>
            </div>
        </div>
        <p class="dest-text">
            is a modern beauty and relaxation space where self-care meets sophistication.
            A good place to stay where every visit is designed to be a luxurious and calming
            pause from everyday.
        </p>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <h2 class="footer-title">Follow our Socials!</h2>
            <div class="social-links">
                <a href="https://www.tiktok.com/&#64;destlounge"
                   class="social-item"
                   target="_blank">
                    <i class="fa-brands fa-tiktok"></i>
                    <span>destlounge</span>
                </a>
                <a href="https://www.facebook.com/profile.php?id=61578352581708" class="social-item" target="_blank">
                    <i class="fa-brands fa-facebook"></i>
                    <span>D'est Lounge</span>
                </a>
                <a href="https://www.instagram.com/destlounge/" class="social-item" target="_blank">
                    <i class="fa-brands fa-instagram"></i>
                    <span>destlounge</span>
                </a>
            </div>
        </div>
    </footer>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Georgia', serif;
        background-color: #d4c4b0;
    }

    /* Sidebar Styles */
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 10%;
        min-width: 9rem;
        height: 100vh;
        background-color: #e7dfd6;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.25rem 0;
        z-index: 1000;
    }

    .logo-container {
        margin-bottom: 2rem;
    }

    .sidebar-logo {
        width: 3.5rem;
        height: auto;
    }

    .sidebar-nav {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        width: 100%;
    }

    .nav-item {
        color: white;
        text-decoration: none;
        padding: 1rem 0.625rem;
        font-size: 1rem;
        font-weight: 500;
        text-align: center;
        transition: background-color 0.3s;
        letter-spacing: 0.0625rem;
        display: block;
    }

        .nav-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .nav-item.active {
            background-color: rgba(139, 111, 71, 0.5);
            border-left: 0.25rem solid #8b6f47;
        }

    .sidebar-footer {
        margin-top: auto;
        padding: 1.25rem 0;
    }

    .admin-link {
        color: white;
        text-decoration: none;
        font-size: 0.75rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.3125rem;
    }

    .admin-link i {
        font-size: 1.25rem;
    }

    /* Main Content Area */
    .main-content {
        margin-left: 10%;
        min-height: 100vh;
        background-color: #d4c4b0;
    }

    /* Banner Styles */
    .banner-container {
        padding: 3.75rem 5rem;
        background-color: #e8dfd5;
        border: 0.1875rem solid #5a4a3a;
        margin: 2.5rem 3.75rem;
    }

    .banner-text {
        text-align: center;
    }

    .hello {
        font-size: 5rem;
        font-weight: 900;
        color: #6b4423;
        margin: 0;
        letter-spacing: 0.1em;
    }

    .youre-looking {
        font-size: 4.5rem;
        font-weight: 400;
        color: #6b4423;
        margin: 0.2rem 0;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        -webkit-text-stroke: 0.09375rem #6b4423;
        -webkit-text-fill-color: transparent;
    }

    .gorgeous {
        font-size: 5.5rem;
        font-weight: 400;
        color: #6b4423;
        margin: 0.2rem 0;
        font-family: 'Brush Script MT', cursive;
        font-style: italic;
    }

    .today {
        font-size: 5rem;
        font-weight: 400;
        color: #6b4423;
        margin: 0;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        -webkit-text-stroke: 0.09375rem #6b4423;
        -webkit-text-fill-color: transparent;
    }


    /* Services Section */
    .services-intro {
        text-align: center;
        padding: 3.75rem 3.75rem 2.5rem;
    }

    .divider-line {
        width: 80%;
        height: 0.25rem;
        background-color: #5a4a3a;
        margin: 0 auto 1.875rem;
        border-radius: 0.125rem;
    }

    .service-title {
        font-size: 3.5rem;
        font-weight: bold;
        font-style: italic;
        color: #8b6f47;
        margin-bottom: 0.625rem;
        font-family: 'Brush Script MT', cursive;
    }

    .service-tagline {
        font-size: 1rem;
        color: #5a4a3a;
        font-weight: 600;
    }

    /* Polaroid Section */
    .polaroid-section {
        display: flex;
        justify-content: center;
        gap: 2.5rem;
        padding: 2.5rem 3.75rem;
        flex-wrap: wrap;
    }

    .polaroid-card {
        background: white;
        padding: 1.25rem;
        padding-bottom: 0.9375rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.15);
        width: 13.75rem;
        position: relative;
        transform: rotate(-2deg);
        transition: transform 0.3s;
    }

    .polaroid-card:nth-child(2) {
        transform: rotate(1deg);
    }

    .polaroid-card:nth-child(3) {
        transform: rotate(-1deg);
    }

    .polaroid-card:hover {
        transform: rotate(0deg) scale(1.05);
    }

    .admin-controls {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        display: flex;
        gap: 0.3125rem;
        z-index: 10;
    }

    .edit-btn,
    .delete-btn {
        background: rgba(255, 255, 255, 0.95);
        border: none;
        border-radius: 50%;
        width: 2rem;
        height: 2rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        box-shadow: 0 0.125rem 0.375rem rgba(0, 0, 0, 0.2);
    }

    .edit-btn {
        color: #4a7c59;
    }

    .edit-btn:hover {
        background: #4a7c59;
        color: white;
        transform: scale(1.1);
    }

    .delete-btn {
        color: #c84b4b;
    }

    .delete-btn:hover {
        background: #c84b4b;
        color: white;
        transform: scale(1.1);
    }

    .polaroid-image {
        width: 100%;
        height: 13.75rem;
        overflow: hidden;
        margin-bottom: 0.9375rem;
        border: 0.0625rem solid #e0e0e0;
    }

    .polaroid-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .polaroid-caption {
        text-align: center;
        padding: 0.3125rem 0;
        color: #c84b4b;
        font-size: 1.25rem;
    }

    /* Add Photo Button */
    .add-photo-container {
        text-align: center;
        padding: 1.875rem;
    }

    .add-photo-btn {
        background-color: #5a4a3a;
        color: white;
        border: none;
        padding: 0.9375rem 2.5rem;
        border-radius: 1.875rem;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 600;
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.2);
    }

    .add-photo-btn:hover {
        background-color: #3a2a1a;
        transform: translateY(-0.125rem);
        box-shadow: 0 0.375rem 0.75rem rgba(0, 0, 0, 0.3);
    }

    /* Description Box */
    .dest-description {
        background-color: rgba(198, 175, 151, 0.85);
        border-radius: 3.75rem;
        padding: 3.125rem 3.75rem;
        margin: 3.75rem auto;
        max-width: 37.5rem;
        text-align: center;
        position: relative;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
    }

    .description-header {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        margin-bottom: 1.25rem;
    }

    .dest-title {
        font-size: 3.5rem;
        font-weight: bold;
        font-style: italic;
        color: #5a4a3a;
        font-family: 'Brush Script MT', cursive;
    }

    .description-controls {
        position: absolute;
        right: 0;
    }

    .dest-text {
        font-size: 1rem;
        line-height: 1.8;
        color: #5a4a3a;
    }

    /* Footer */
    footer {
        background-color: rgba(198, 175, 151, 0.7);
        padding: 3.125rem 3.75rem;
        margin-top: 5rem;
    }

    .footer-container {
        text-align: center;
    }

    .footer-title {
        font-size: 2.5rem;
        font-style: italic;
        color: #5a4a3a;
        margin-bottom: 2.1875rem;
        font-family: 'Brush Script MT', cursive;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 5rem;
    }

    .social-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: #5a4a3a;
        transition: transform 0.3s;
    }

    .social-item:hover {
        transform: translateY(-0.1875rem);
    }

    .social-item i {
        font-size: 2.25rem;
    }

    .social-item span {
        font-size: 1rem;
        font-weight: 500;
    }

    /* Responsive Design */
    @@media (max-width: 48rem) {
        .sidebar {
            width: 6%;
            min-width: 5rem;
        }

        .main-content {
            margin-left: 6%;
        }

        .nav-item {
            font-size: 0.65rem;
            padding: 0.75rem 0.3125rem;
        }

        .polaroid-section {
            flex-direction: column;
            align-items: center;
        }

        .banner-container {
            padding: 2.5rem 1.875rem;
            margin: 1.25rem 1.875rem;
        }

        .hello {
            font-size: 3rem;
        }

        .youre-looking {
            font-size: 2.25rem;
        }

        .gorgeous {
            font-size: 3.5rem;
        }

        .today {
            font-size: 2.625rem;
        }
    }
</style>

