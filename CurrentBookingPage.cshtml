@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<header>
    <div class="header-container">
        <div class="logo">
            <a href="@Url.Action("Homepage","Main")">
                <img src="~/Content/Pictures/DestLogo.png" class="logo" alt="D'est Lounge">
            </a>
        </div>
        <nav class="main-nav">
            <a href="@Url.Action("Homepage","Main")">HOME</a>
            <a href="@Url.Action("ServicePage","Main")">SERVICES</a>
            <a href="@Url.Action("ContactPage","Main")">CONTACT</a>
            <a href="@Url.Action("FAQsPage","Main")">FAQs</a>
        </nav>
        <div class="header-actions">
            <a href="@Url.Action("LoginPage","Main")" class="login-link">
                <i class="fa-regular fa-user"></i> LOGIN/SIGNUP
            </a>
            <a href="@Url.Action("ContactPage","Main")" class="email-icon">
                <i class="fa-solid fa-envelope"></i>
            </a>
        </div>
    </div>
</header>

<div class="profile-container">
    <aside class="sidebar">
        <nav class="profile-nav">
            <a href="@Url.Action("ProfilePage","Main")" class="nav-item">Profile</a>
            <a href="@Url.Action("CurrentBookingPage","Main")" class="nav-item active">Current booking</a>
            <a href="@Url.Action("ReviewPage","Main")" class="nav-item">To Review</a>
        </nav>
    </aside>

    <main class="profile-content">
        @if (Model != null && Model.HasBooking)
        {
            <div class="booking-card">
                <h2 class="booking-heading">Service Summary</h2>

                <div class="booking-details">
                    <div class="booking-row">
                        <span class="booking-label">Type of Service</span>
                        <span class="booking-value service-type">@Model.ServiceType</span>
                    </div>

                    <div class="booking-row">
                        <span class="booking-label">Total Cost</span>
                        <span class="booking-value">₱ @Model.TotalCost.ToString("N2")</span>
                    </div>

                    <div class="booking-row">
                        <span class="booking-label">Date</span>
                        <span class="booking-value">@Model.BookingDate.ToString("MMM dd, yyyy")</span>
                    </div>

                    <div class="booking-row">
                        <span class="booking-label">Time</span>
                        <span class="booking-value">@Model.StartTime - @Model.EndTime</span>
                    </div>
                </div>

                <div class="booking-actions">
                    <button type="button" class="btn-cancel" onclick="cancelBooking(@Model.BookingId)">
                        Cancel Booking
                    </button>
                    <button type="button" class="btn-reschedule" onclick="location.href='@Url.Action("RescheduleBooking", "Main", new { id = Model.BookingId })'">
                        Reschedule Booking
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="booking-card">
                <h2 class="booking-heading">Service Summary</h2>
                <div class="no-booking">
                    <p>You don't have any current bookings.</p>
                    <a href="@Url.Action("ServicePage","Main")" class="btn-book-now">Book a Service</a>
                </div>
            </div>
        }
    </main>
</div>

<footer>
    <div class="footer-container">
        <h2 class="footer-title">Follow our Socials!</h2>
        <div class="social-links">
            <a href="https://www.tiktok.com/&#64;destlounge"
               class="social-item"
               target="_blank">
                <i class="fa-brands fa-tiktok"></i>
                <span>destlounge</span>
            </a>
            <a href="https://www.facebook.com/profile.php?id=61578352581708" class="social-item" target="_blank">
                <i class="fa-brands fa-facebook"></i>
                <span>D'est Lounge</span>
            </a>
            <a href="https://www.instagram.com/destlounge/" class="social-item" target="_blank">
                <i class="fa-brands fa-instagram"></i>
                <span>destlounge</span>
            </a>
        </div>
    </div>
</footer>

<style>
    /* ===== SHARED CONTAINER & SIDEBAR ===== */
.profile-container {
    display: flex;
    min-height: calc(100vh - 200px);
    background-color: #f5f0eb;
}

.sidebar {
    width: 280px;
    background-color: #d4c4b5;
    padding: 0;
    min-height: 100%;
}

.profile-nav {
    display: flex;
    flex-direction: column;
    padding-top: 40px;
}

.profile-nav .nav-item {
    padding: 20px 35px;
    color: #5a4a3a;
    text-decoration: none;
    font-size: 18px;
    font-weight: 500;
    transition: all 0.3s ease;
    border-left: 4px solid transparent;
    display: block;
}

.profile-nav .nav-item:hover {
    background-color: #c9b5a3;
    border-left-color: #6b5544;
}

.profile-nav .nav-item.active {
    background-color: #c9b5a3;
    font-weight: 600;
    border-left-color: #6b5544;
}

.profile-content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 80px 40px;
}

/* ===== BOOKING PAGE SPECIFIC ===== */
.booking-card {
    background-color: #e8ddd1;
    border-radius: 30px;
    padding: 50px 60px;
    max-width: 600px;
    width: 100%;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.booking-heading {
    color: #6b5544;
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 40px;
    text-align: left;
}

.booking-details {
    display: flex;
    flex-direction: column;
    gap: 30px;
    margin-bottom: 50px;
}

.booking-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 5px 0;
}

.booking-label {
    color: #6b5544;
    font-size: 18px;
    font-weight: 500;
}

.booking-value {
    color: #5a4a3a;
    font-size: 18px;
    font-weight: 600;
    text-align: right;
}

.service-type {
    background-color: #c9b5a3;
    padding: 10px 25px;
    border-radius: 8px;
    min-width: 200px;
    text-align: center;
}

.booking-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-top: 50px;
}

.btn-cancel,
.btn-reschedule {
    padding: 15px 45px;
    border: none;
    border-radius: 25px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    background-color: #6b5544;
    color: white;
}

.btn-cancel:hover,
.btn-reschedule:hover {
    background-color: #5a4635;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.no-booking {
    text-align: center;
    padding: 60px 20px;
}

.no-booking p {
    color: #6b5544;
    font-size: 18px;
    margin-bottom: 30px;
}

.btn-book-now {
    display: inline-block;
    padding: 15px 45px;
    background-color: #6b5544;
    color: white;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-book-now:hover {
    background-color: #5a4635;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* ===== RESPONSIVE ===== */
@@media (max-width: 768px) {
    .profile-container {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        padding: 20px 0;
    }

    .profile-nav {
        flex-direction: row;
        overflow-x: auto;
        white-space: nowrap;
        padding-top: 0;
        -webkit-overflow-scrolling: touch;
    }

    .profile-nav .nav-item {
        white-space: nowrap;
        padding: 15px 20px;
        border-left: none;
        border-bottom: 4px solid transparent;
    }

    .profile-nav .nav-item:hover {
        border-left-color: transparent;
        border-bottom-color: #6b5544;
    }

    .profile-nav .nav-item.active {
        border-left-color: transparent;
        border-bottom-color: #6b5544;
    }

    .profile-content {
        padding: 40px 20px;
    }

    .booking-card {
        padding: 30px 25px;
    }

    .booking-heading {
        font-size: 26px;
        margin-bottom: 30px;
    }

    .booking-actions {
        flex-direction: column;
        gap: 15px;
    }

    .btn-cancel,
    .btn-reschedule,
    .btn-book-now {
        width: 100%;
        text-align: center;
    }

    .booking-row {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }

    .booking-value {
        text-align: left;
    }

    .service-type {
        width: 100%;
    }
}

@@media (max-width: 480px) {
    .booking-card {
        padding: 25px 20px;
        border-radius: 20px;
    }

    .profile-content {
        padding: 30px 15px;
    }

    .booking-heading {
        font-size: 24px;
    }

    .booking-details {
        gap: 20px;
    }

    .btn-cancel,
    .btn-reschedule {
        padding: 12px 30px;
        font-size: 15px;
    }
}
</style>
